	subr findflowers

		doif totl 2 80 50202 gt 0
			setv va03 grap posx posy

			seta va00 null
			enum 2 80 50202
				doif targ ne null
					doif va00 eq null
						seta va00 targ
						setv va01 relx ownr targ
						setv va02 rely ownr targ
						absv va01
						absv va02
						addv va01 va02
						setv va04 va01
					else
						setv va01 relx ownr targ
						setv va02 rely ownr targ
						absv va01
						absv va02
						addv va01 va02
						doif va01 lt va04
							seta va00 targ
							setv va04 va01
						endi
					endi
				endi
			next
			doif va00 ne null
				targ va00
				setv va01 relx ownr va00

				setv va02 rely ownr va00
				targ ownr


				doif va01 gt 0

					addv velx ov06

				elif va01 lt 0

					subv velx ov06

				endi

				doif va02 lt 0

					subv vely ov06

				elif va02 gt 0

					addv vely ov06

				endi

				gsub flowermarker

				gsub track
			else
				gsub wander
			endi
		else
