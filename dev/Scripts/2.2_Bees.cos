					addv vely ov06
				elif rand 0 1 eq 1 or rtyp room ownr eq 8 or rtyp room ownr eq 9
					subv vely ov06
				endi
				gsub flowermarker
				wait rand 10 20
			repe
		endi

		gsub flowermarker
	retn
