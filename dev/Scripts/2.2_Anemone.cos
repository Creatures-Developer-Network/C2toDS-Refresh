* Timer script

scrp 2 15 50208 9

	doif ov00 eq 0

		tick 10

		setv ov00 1

	endi

	doif rtyp room ownr ne 8 and rtyp room ownr ne 9

		setv ov00 3

	endi

	doif ov00 eq 1

		doif pose lt 8

			setv va00 pose

			addv va00 1

			pose va00

		else

			setv ov00 2

			tick 20

		endi

	endi

	doif ov00 eq 2

		doif pose lt 19

			setv va09 rand 20 80

			tick va09

			setv va00 pose

			addv va00 1

			pose va00

		else

			pose 9

		endi

	endi

	doif ov00 eq 3

		doif pose gt 0

			setv va00 pose

			subv va00 1

			pose va00

		else

			setv ov00 0

			tick 60

*			setv actv 0

		endi

	endi

endm





