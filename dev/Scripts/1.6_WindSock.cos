scrp 2 19 50216 9
	setv va00 hirp room ownr 2 0
	setv va01 torx va00
	setv va02 tory va00


	doif torx va00 > 0
* the higher concentration is to the right
		doif base eq 0
			anim [48 49 50 51 52 53 54 55]
			over
		endi
		base 24
		pose 0
	else
		doif base eq 24
			base 0
			anim [55 54 53 52 51 50 49 48]
			over
		endi
		base 0
		pose 0
	endi

	addv va01 posx
	addv va02 posy

	setv va03 prop grap va01 va02 2
	setv va04 prop grap posx posy 2

	subv va03 va04
*dbg: outv va03

	doif va03 lt .015
*stand still
		pose 0
	elif va03 ge .015 and va03 lt .1
		anim [0 1 2 3 4 5 6 7 255]
	elif va03 ge .1 and va03 lt .3
		anim [8 9 10 11 12 13 14 15 255]
	elif va03 ge .3
		anim [16 17 18 19 20 21 22 23 255]
	endi




