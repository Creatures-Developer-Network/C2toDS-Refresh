* Detritus Timer script

scrp 2 10 50217 9
	inst
	doif carr ne null
		attr 208
		emit 0 0
		slow
		frat 5

		anim [0 1 2 3 4]

		over
* Since this might take a bit, make sure that it's still invised and emitting nothin
		attr 208
		emit 0 0

		esee 2 4 50217

			addv va10 1

		next

		esee 2 11 50217

			addv va10 1

		next



		doif va10 gt 5

			wait 50

			setv va00 posl

			setv va01 post

			new: simp 2 4 50217 "moe_C2toDS_aubergine" 14 0 3000

			doif tmvt va00 va01 eq 1

				mvto va00 va01

			else

				mvsf va00 va01

			endi

			doif rand 0 1 eq 0

				new: simp 2 4 50217 "moe_C2toDS_aubergine" 14 0 3000

				doif tmvt va00 va01 eq 1

					mvto va00 va01

				else

					mvsf va00 va01

				endi

				velo rand 10 -10 rand -4 -12

			endi

		endi

		wait 50

		kill ownr
	endi


endm

