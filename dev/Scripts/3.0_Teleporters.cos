	doif type _p2_ = 0
		seta _p2_ from
	endi

*highlight the appropriate button
	part _p1_
	pose 1

	part 1

	anim [0 1 2 3 4 5 6 7 0]



	setv va00 posl

	subv va00 35

	setv va01 post

	subv va01 30

	new: simp 1 17 50201 "moe_C2toDS_tele" 9 22 6998

	mvto va00 va01

	snde "tel2"





