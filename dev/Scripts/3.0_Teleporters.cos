*so target the appropriate teleporter
	inst
	doif _p1_ = 3

		wait 5

		inst

*find a random teleporter
		loop

			rtar 3 2 50202

		untl targ ne ownr

	else

*find the big teleporter that starts in the incubator room
		rtar 3 2 50200

		doif ov00 eq 1

			targ ov01

		endi

	endi


	doif targ eq null

		stop

	endi


	setv va00 posx

	setv va01 posb

	seta va51 targ

	mesg writ targ 1000

	targ ownr

*delay a bit to sync up the camera move with both teleporter tyles
	doif _p1_ = 3
		wait 10
	else
		wait 15
	endi

	inst

*_P2_ is FROM
	doif _p2_ eq pntr

		cmrp va00 va01 0

	endi





