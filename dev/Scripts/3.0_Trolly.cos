			setv ov99 0

			setv velx 0

			setv vely 0

			part 2

			pose 0

			part 3

			pose 0
			epas 4 0 0
				driv 19 -1.0
			next
			dpas 4 0 0
			unlk
			mvto 5800 48257
			enum 3 12 50205
				pose 0
			next
			doif totl 3 13 50205 gt 0
